<scenario>
    <!--Obstacles-->
    <obstacle x1="-15" y1="-1.5" x2="15" y2="-1.5" type="line"/>
    <obstacle x1="-15" y1="1.5" x2="15" y2="1.5" type="line"/>
    <obstacle x="2" y="-0.5" xHalfLength="0.6" yHalfLength="0.2" type="rectangle"/>
    <obstacle x="1" y="0.5" xHalfLength="0.6" yHalfLength="0.2" type="rectangle"/>
    <obstacle x="-2" y="0"  radius="0.2" type="circle"/>
    <obstacle x="8" y="1.1" xHalfLength="0.6" yHalfLength="0.4" type="rectangle"/>

    
    <!--Waypoints (incl. WaitingQueues)-->
    <waypoint id="p1" x="-10" y="0" r="2"/>
    <waypoint id="p2" x="-5" y="0" r="2"/>
    <waypoint id="p3" x="0" y="0" r="2"/>
    <waypoint id="p4" x="5" y="0" r="2"/>
    <waypoint id="p5" x="10" y="0" r="2"/>

    <!--AgentClusters-->
    <agent x="5" y="0" n="1" dx="0" dy="0" type="1">
        <addwaypoint id="p3"/>
        <addwaypoint id="p2"/>
        <addwaypoint id="p1"/>
    </agent>

    <!-- Robot-->>
    <agent x="-5" y="0" n="1" dx="0" dy="0" type="2">
        <addwaypoint id="p3"/>
        <addwaypoint id="p4"/>
        <addwaypoint id="p5"/>
    </agent>

</scenario>